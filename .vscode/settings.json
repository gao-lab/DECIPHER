{
  "python.defaultInterpreterPath": "${workspaceRoot}/conda/bin/python",
  "files.watcherExclude": {
    "**/conda/**": true,
    "**/data/**": true,
    "**/renv/**": true,
    "**/.snakemake/**": true,
    "**/.ipynb_checkpoints/**": true,
    "**/.pytest_cache/**": true,
    "**/.virtual_documents/**": true,
    "**/__pycache__/**": true,
    "**/*.deprecated/**": true,
    "**/*.bak/**": true,
    "**/*.old/**": true
  },
  "files.exclude": {
    "**/.snakemake/**": true,
    "**/.ipynb_checkpoints/**": true,
    "**/.pytest_cache/**": true,
    "**/.virtual_documents/**": true,
    "**/__pycache__/**": true,
    "**/conda": true,
    "**/*.deprecated/**": true,
    "**/*.bak/**": true,
    "**/*.old/**": true,
    "**/._**": true,
    "coverage.xml": true,
    ".coverage**": true,
  },
  "jupyter.jupyterServerType": "local",
  "python.tensorboard.logDirectory": "logs/",
  "zenMode.restore": false,
  "cSpell.words": [
    "TOFIX",
    "transcriptomics"
  ],
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.linting.ignorePatterns": [
    "**/site-packages/**/*.py",
    ".vscode/*.py",
    "**==.py"
  ],
  "r.lsp.promptToInstall": false
}
